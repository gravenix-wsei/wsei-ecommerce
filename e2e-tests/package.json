{
  "name": "e2e-tests",
  "version": "1.0.0",
  "description": "End-to-end tests for WSEI E-commerce application using Playwright",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:chromium": "playwright test --project=chromium",
    "test:admin": "playwright test tests/admin",
    "test:customer": "playwright test tests/customer",
    "report": "playwright show-report",
    "codegen": "playwright codegen http://localhost:8080",
    "install:browsers": "playwright install --with-deps"
  },
  "keywords": [
    "playwright",
    "e2e",
    "testing",
    "ecommerce",
    "symfony"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/dotenv": "^6.1.1",
    "@types/node": "^25.0.3",
    "dotenv": "^16.4.5"
  }
}

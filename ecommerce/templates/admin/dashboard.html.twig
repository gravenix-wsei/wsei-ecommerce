{% extends 'base.html.twig' %}

{% block title %}Admin Dashboard{% endblock %}

{% block body %}
<div class="admin-container">
    <div class="admin-header">
        <h1>Admin Dashboard</h1>
        <div>
            <span>Welcome, {{ user.email }}</span>
            <a href="{{ path('logout') }}" class="btn btn-primary" style="margin-left: 1rem;">Logout</a>
        </div>
    </div>

    <div class="card">
        <h2>Welcome to the Admin Panel</h2>
        <p>You are successfully logged in as an administrator.</p>
        <p>This is a placeholder dashboard. Future features will be added here.</p>
    </div>

    <div class="card">
        <h2>Quick Stats</h2>
        <p>Dashboard statistics and metrics will be displayed here.</p>
    </div>
</div>
{% endblock %}


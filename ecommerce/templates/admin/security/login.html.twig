{% extends 'base.html.twig' %}

{% block title %}Login - Admin Panel{% endblock %}

{% block body %}
<div class="login-container">
    <div class="login-card">
        <div class="login-image">
            <img src="https://placehold.co/400x600/1a1a2e/eee?text=Admin+Panel" alt="Admin Panel">
        </div>
        <div class="login-form-wrapper">
            <div class="login-form-content">
                <h1>Admin Login</h1>
                <p class="login-subtitle">Enter your credentials to access the admin panel</p>

                {% if error %}
                    <div class="alert alert-error">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

                <form action="{{ path('admin_login') }}" method="post">
                    <div class="form-group">
                        <label for="username">Email</label>
                        <input type="email"
                               id="username"
                               name="_username"
                               value="{{ last_username }}"
                               required
                               autofocus
                               placeholder="admin@example.com">
                    </div>

                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password"
                               id="password"
                               name="_password"
                               required
                               placeholder="Enter your password">
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <button type="submit" class="btn btn-primary">Login</button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}


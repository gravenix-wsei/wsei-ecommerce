{% extends 'admin/pages/settings/base.html.twig' %}

{% block title %}Admin Users{% endblock %}

{% block settings_title %}Admin Users{% endblock %}

{% block settings_content %}
<div class="admin-container">
    <div class="admin-header">
        <h2>Manage Administrator Accounts</h2>
        <a href="{{ path('admin.settings.admin_users.new') }}" class="btn btn-primary">
            {{ svg('img/icons/plus.svg', {class: 'icon'}) }}
            Add New Admin
        </a>
    </div>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="alert alert-error">
            {{ message }}
        </div>
    {% endfor %}

    <div class="card">
        {% if users is empty %}
            <p>No administrator accounts found.</p>
        {% else %}
            <table class="admin-data-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Email</th>
                        <th class="text-right">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.id }}</td>
                            <td>{{ user.email }}</td>
                            <td class="text-right">
                                {% if app.user.id != user.id %}
                                    <a href="{{ path('admin.settings.admin_users.edit', {id: user.id}) }}"
                                       class="btn btn-sm btn-secondary"
                                       title="Edit">
                                        {{ svg('img/icons/pencil.svg', {class: 'icon'}) }}
                                    </a>

                                    <form method="post"
                                          action="{{ path('admin.settings.admin_users.delete', {id: user.id}) }}"
                                          style="display: inline;"
                                          onsubmit="return confirm('Are you sure you want to delete this administrator account?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete_user_' ~ user.id) }}">
                                        <button type="submit" class="btn btn-sm btn-danger" title="Delete">
                                            {{ svg('img/icons/trash.svg', {class: 'icon'}) }}
                                        </button>
                                    </form>
                                {% else %}
                                    <button class="btn btn-sm btn-secondary" disabled title="Cannot edit your own account">
                                        {{ svg('img/icons/pencil.svg', {class: 'icon'}) }}
                                    </button>
                                    <button class="btn btn-sm btn-danger" disabled title="Cannot delete your own account">
                                        {{ svg('img/icons/trash.svg', {class: 'icon'}) }}
                                    </button>
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% endif %}
    </div>
</div>
{% endblock %}


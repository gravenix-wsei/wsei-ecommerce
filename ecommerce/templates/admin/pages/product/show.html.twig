{% extends 'admin/base.html.twig' %}

{% block title %}{{ product.name }} - Admin Panel{% endblock %}

{% block content %}
<div class="admin-header">
    <h1>Product Details</h1>
    <div>
        <a href="{{ path('admin.product.index') }}" class="btn btn-secondary">
            {{ svg('img/icons/arrow-left.svg', {class: 'icon'}) }}
            Back to list
        </a>
        <a href="{{ path('admin.product.edit', {'id': product.id}) }}" class="btn btn-warning">
            {{ svg('img/icons/pencil.svg', {class: 'icon'}) }}
            Edit
        </a>
    </div>
</div>

<div class="detail-container">
    <table class="detail-table">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Stock</th>
                <td>{{ product.stock }}</td>
            </tr>
            <tr>
                <th>Price Net</th>
                <td>{{ product.priceNet }} PLN</td>
            </tr>
            <tr>
                <th>Price Gross</th>
                <td>{{ product.priceGross }} PLN</td>
            </tr>
        </tbody>
    </table>
</div>

<div class="form-actions">
    <form method="post" action="{{ path('admin.product.delete', {'id': product.id}) }}" onsubmit="return confirm('Are you sure you want to delete this product?');">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
        <button type="submit" class="btn btn-danger">
            {{ svg('img/icons/trash.svg', {class: 'icon'}) }}
            Delete Product
        </button>
    </form>
</div>
{% endblock %}


{% extends 'admin/base.html.twig' %}

{% block title %}{{ customer.fullName }} - Admin Panel{% endblock %}

{% block content %}
<div class="admin-header">
    <h1>Customer Details</h1>
    <div>
        <a href="{{ path('admin.customer.index') }}" class="btn btn-secondary">
            {{ svg('img/icons/arrow-left.svg', {class: 'icon'}) }}
            Back to list
        </a>
        <a href="{{ path('admin.customer.edit', {'id': customer.id}) }}" class="btn btn-warning">
            {{ svg('img/icons/pencil.svg', {class: 'icon'}) }}
            Edit
        </a>
    </div>
</div>

<div class="detail-container">
    <table class="detail-table">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ customer.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ customer.email }}</td>
            </tr>
            <tr>
                <th>First Name</th>
                <td>{{ customer.firstName }}</td>
            </tr>
            <tr>
                <th>Last Name</th>
                <td>{{ customer.lastName }}</td>
            </tr>
            <tr>
                <th>Full Name</th>
                <td>{{ customer.fullName }}</td>
            </tr>
        </tbody>
    </table>
</div>

<div class="admin-header">
    <h2>Addresses</h2>
    <div>
        <a href="{{ path('admin.address.new', {'customerId': customer.id}) }}" class="btn btn-primary">
            {{ svg('img/icons/plus.svg', {class: 'icon'}) }}
            Add Address
        </a>
    </div>
</div>

<div class="admin-table-container">
    {% if customer.addresses|length > 0 %}
        <table class="admin-data-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Full Name</th>
                    <th>Street</th>
                    <th>Zipcode</th>
                    <th>City</th>
                    <th>Country</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for address in customer.addresses %}
                    <tr>
                        <td>{{ address.id }}</td>
                        <td>{{ address.fullName }}</td>
                        <td>{{ address.street }}</td>
                        <td>{{ address.zipcode }}</td>
                        <td>{{ address.city }}</td>
                        <td>{{ address.country }}</td>
                        <td class="actions">
                            <a href="{{ path('admin.address.edit', {'customerId': customer.id, 'id': address.id}) }}" class="btn btn-sm btn-warning" title="Edit">
                                {{ svg('img/icons/pencil.svg', {class: 'icon'}) }}
                            </a>
                            <form method="post" action="{{ path('admin.address.delete', {'customerId': customer.id, 'id': address.id}) }}" onsubmit="return confirm('Are you sure you want to delete this address?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ address.id) }}">
                                <button type="submit" class="btn btn-sm btn-danger" title="Delete">
                                    {{ svg('img/icons/trash.svg', {class: 'icon'}) }}
                                </button>
                            </form>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p class="text-muted">No addresses found for this customer.</p>
    {% endif %}
</div>

<div class="form-actions">
    <form method="post" action="{{ path('admin.customer.delete', {'id': customer.id}) }}" onsubmit="return confirm('Are you sure you want to delete this customer?');">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ customer.id) }}">
        <button type="submit" class="btn btn-danger">
            {{ svg('img/icons/trash.svg', {class: 'icon'}) }}
            Delete Customer
        </button>
    </form>
</div>
{% endblock %}




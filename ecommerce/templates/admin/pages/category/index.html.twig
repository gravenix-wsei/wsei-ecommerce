{% extends 'admin/base.html.twig' %}

{% block title %}Categories - Admin Panel{% endblock %}

{% block content %}
<div class="admin-header">
    <h1>Categories</h1>
    <a href="{{ path('admin.category.new') }}" class="btn btn-primary">
        {{ svg('img/icons/plus.svg', {class: 'icon'}) }}
        Add Category
    </a>
</div>

{% for message in app.flashes('success') %}
    <div class="alert alert-success">
        {{ message }}
    </div>
{% endfor %}

<div class="table-container">
    <table class="data-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td class="actions">
                    <a href="{{ path('admin.category.show', {'id': category.id}) }}" class="btn btn-sm btn-info" title="View">
                        {{ svg('img/icons/eye.svg', {class: 'icon'}) }}
                    </a>
                    <a href="{{ path('admin.category.edit', {'id': category.id}) }}" class="btn btn-sm btn-warning" title="Edit">
                        {{ svg('img/icons/pencil.svg', {class: 'icon'}) }}
                    </a>
                    <form method="post" action="{{ path('admin.category.delete', {'id': category.id}) }}" style="display:inline-block;" onsubmit="return confirm('Are you sure you want to delete this category?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                        <button type="submit" class="btn btn-sm btn-danger" title="Delete">
                            {{ svg('img/icons/trash.svg', {class: 'icon'}) }}
                        </button>
                    </form>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="3" class="text-center">No categories found</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}


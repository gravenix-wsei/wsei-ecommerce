{
    "type": "project",
    "license": "proprietary",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=8.1",
        "ext-bcmath": "*",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "doctrine/doctrine-bundle": "^3.0",
        "doctrine/doctrine-migrations-bundle": "^3.7",
        "doctrine/orm": "^3.5",
        "phpdocumentor/reflection-docblock": "^5.6",
        "phpstan/phpdoc-parser": "^2.3",
        "stripe/stripe-php": "^19.1",
        "symfony/asset": "7.4.*",
        "symfony/cache": "7.4.*",
        "symfony/console": "7.4.*",
        "symfony/dotenv": "7.4.*",
        "symfony/flex": "^2.10",
        "symfony/form": "7.4.*",
        "symfony/framework-bundle": "7.4.*",
        "symfony/property-access": "7.4.*",
        "symfony/property-info": "7.4.*",
        "symfony/runtime": "7.4.*",
        "symfony/security-bundle": "7.4.*",
        "symfony/serializer": "7.4.*",
        "symfony/twig-bundle": "7.4.*",
        "symfony/validator": "7.4.*",
        "symfony/yaml": "7.4.*",
        "zircote/swagger-php": "^5.7"
    },
    "config": {
        "allow-plugins": {
            "infection/extension-installer": true,
            "php-http/discovery": true,
            "symfony/flex": true,
            "symfony/runtime": true
        },
        "bump-after-update": true,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Wsei\\Ecommerce\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Wsei\\Ecommerce\\Tests\\UnitTest\\": "tests/UnitTest",
            "Wsei\\Ecommerce\\Tests\\IntegrationTest\\": "tests/IntegrationTest"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*",
        "symfony/polyfill-php82": "*",
        "symfony/polyfill-php83": "*",
        "symfony/polyfill-php84": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "ecs": "vendor/bin/ecs check",
        "phpstan": "vendor/bin/phpstan analyse --memory-limit 512M",
        "phpmetrics": "vendor/bin/phpmetrics --report-html=phpmetrics .",
        "test": "XDEBUG_MODE=coverage bin/phpunit",
        "test:unit": "@test --testsuite UnitTests",
        "test:integration": "@test --testsuite IntegrationTests",
        "test:coverage": "@test --config phpunit.dist.coverage.xml --coverage-text --coverage-cobertura=phpunit-coverage/cobertura.xml --testdox",
        "test:infection": "vendor/bin/infection --test-framework=phpunit --static-analysis-tool=phpstan --static-analysis-tool-options=\"--memory-limit=256M\" --coverage=phpunit-coverage/xml"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "7.4.*"
        }
    },
    "require-dev": {
        "dama/doctrine-test-bundle": "^8.4",
        "infection/infection": "^0.31.9",
        "phpmetrics/phpmetrics": "^2.9",
        "phpstan/phpstan": "^2.1",
        "phpstan/phpstan-doctrine": "^2.0",
        "phpstan/phpstan-symfony": "^2.0",
        "phpunit/phpunit": "^12.4",
        "symfony/browser-kit": "7.4.*",
        "symfony/css-selector": "7.4.*",
        "symfony/maker-bundle": "^1.65",
        "symplify/easy-coding-standard": "^13.0"
    }
}
